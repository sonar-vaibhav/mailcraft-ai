{
    "name": "Mail Craft",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "MailCraft is an AI-powered assistant that helps you write, rephrase, and polish your emails effortlessly.",
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": "icons/logo.png"
    },
    "icons": {
        "16": "icons/logo.png",
        "48": "icons/logo.png",
        "128": "icons/logo.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://mail.google.com/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}